<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.iridiobis.popularmovies" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".android.PopularMoviesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".presentation.RootActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.ItemListActivity"
            android:label="@string/title_item_list"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".presentation.MovieDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".presentation.ItemListActivity"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.iridiobis.popularmovies.presentation.ItemListActivity" />
        </activity>
    </application>

</manifest>
